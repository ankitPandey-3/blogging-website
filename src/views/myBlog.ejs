<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>

    <style>
        .card {
            width: 250px; /* Fixed width for each card */
            height: 350px; /* Fixed height for each card */
            margin: 8px; /* margin around each card */
            display: inline-block; /* Display cards in a grid layout */
            vertical-align: top; /* Align cards to the top of their container */
        }
    
        @media (max-width: 992px) {
            .card {
                width: 250px; /* For screens up to 992px, maintain the same fixed width */
            }
        }
    
        @media (max-width: 768px) {
            .card {
                width: 250px; /* For screens up to 768px, maintain the same fixed width */
            }
        }
    
        @media (max-width: 576px) {
            .card {
                width: calc(50% - 16px); /* For screens up to 576px, show two cards in a row */
            }
        }
    
        @media (max-width: 400px) {
            .card {
                width: calc(100% - 16px); /* For screens up to 400px, show one card per row */
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="mt-3">
        <% locals.blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="..." style="width: 100%; height: 200px; object-fit: cover;">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text">Wriiten by- <%= blog.authorName %></p>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
                  <a href="/blog/delete/<%= blog._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this blog?')">
                    <i class="fas fa-trash-alt"></i> Delete
                </a>
                
                </div>
              </div>
        <% }) %>
    </div>

    <%- include('./partials/script') %>
</body>
</html>